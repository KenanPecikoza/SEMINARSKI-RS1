@using eDnevnik.data.ViewModels;

@{
    ViewData["Title"] = "OdjeljenjeDetalji";

}

@model OdjeljenjeDetaljiVM
<div class="container">

    <div class="row">
        <h5 class="col-lg-10">Detalji odjeljenja</h5>
        <a class="col-lg-2 btn btn-primary" asp-action="PrikaziOdjeljenja" asp-controller="Odjeljenje">Lista odjeljenja</a>
    </div>
    <br />

    <div class="row">
        <form class="col-lg-12">
            <div class="form-row">
                <div class="form-group col-md-2">
                    <label asp-for="Razred">Razred</label>
                    <input asp-for="Razred" class="form-control" readonly />
                </div>
                <div class="form-group col-md-2">
                    <label asp-for="Oznaka">Oznaka</label>
                    <input asp-for="Oznaka" class="form-control" readonly />
                </div>
                <div class="form-group col-md-3">
                    <label asp-for="Smjena">Smjena</label>
                    <input asp-for="Smjena" class="form-control" readonly />
                </div>
                <div class="form-group col-md-5">
                    <label asp-for="Opis">Opis</label>
                    <input asp-for="Opis" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label>Razrednik</label>
                    <input asp-for="@Model.Razrednik" class="form-control" readonly />
                </div>
                <div class="form-group col-md-2">
                    <label>Detalji Razrednika</label>
                    <a class="btn btn-primary form-control" asp-action="Detalji" asp-controller="Nastavnik" asp-route-nastavnoOsobljeId="@Model.RazrednikID">Detalji</a>
                </div>
            </div>
            <div class="form-row">

                <div class="form-group col-md-4">
                    <label>Predsjednik</label>
                    <input asp-for="@Model.Predsjednik" class="form-control" readonly />
                </div>
            </div>
            <div class="form-row">

                <div class="form-group col-md-4">
                    <label>Blagajnik</label>
                    <input asp-for="@Model.Blagajnik" class="form-control" readonly />
                </div>
            </div>
        </form>
    </div>
</div>
